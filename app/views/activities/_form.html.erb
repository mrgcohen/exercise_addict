<%= form_for(@activity, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @activity.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h4>

      <ul>
      <% @activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :exercise, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :exercise_id, Exercise.all, :id, :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :intensity, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :intensity_id, Intensity.all, :id, :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :commute, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :commute, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :duration, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :duration, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :distance, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :distance, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
