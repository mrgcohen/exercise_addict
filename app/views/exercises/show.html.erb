<div class="page-header">
  <%= link_to exercises_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_exercise_path(@exercise), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show exercise</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @exercise.name %></dd>

  <dt>Description:</dt>
  <dd><%= @exercise.description %></dd>

</dl>
